<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Riverwalk Place Transit Information</title>
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-icons.css">
  <link rel="stylesheet" href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-svg.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
  <link rel="stylesheet" href="./assets/css/theme.css">
  <link rel="stylesheet" href="./assets/css/loopple/loopple.css">
</head>

<body class="g-sidenav-show">
  <div class="main-content" id="panel">
    <div class="container-fluid pt-3">
      <div class="row removable">
        <div class="col-lg-12">
          <p class=""></p>
          <h3>Riverwalk Place Transit Information</h3>
        </div>
      </div>
      <div class="row removable">
        <div class="col-lg-12">
          <p class=""></p>
          <h5>Port Imperial Ferry</h5>
        </div>
      </div>
      <div class="row  mt-4 removable">
        {% for ferry in ferry_times.items() %}
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">{{ ferry[0] }}</p>
                    <h5 class="font-weight-bolder mb-0">{{ ferry[1]['minutes'] }} minutes<div>{{ ferry[1]['time'] }}</div>
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-building text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="row removable">
        <div class="col-lg-12">
          <p class=""></p>
          <h5>NJ Transit Bus</h5>
        </div>
      </div>
      <div class="row  mt-4 removable">
        {% for bus in bus_info %}
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">{{ bus.travelDirection }}</p>
                    <h5 class="font-weight-bolder mb-0">{{ bus.travelTime }} minutes
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-building text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
      <div class="row removable">
        <div class="col-lg-12">
          <p class=""></p>
          <h5>Lincoln Tunnel Traffic</h5>
        </div>
      </div>
      <div class="row  mt-4 removable">
        {% for tunnel in tunnel_traffic %}
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
          <div class="card">
            <div class="card-body p-3">
              <div class="row">
                <div class="col-8">
                  <div class="numbers">
                    <p class="text-sm mb-0 text-capitalize font-weight-bold">{{ tunnel.pretty_direction() }}</p>
                    <h5 class="font-weight-bolder mb-0">{{ tunnel.travelTime }} minutes<div>{{ tunnel.routeSpeed }} mph</div><div>{{ tunnel.infomationalText }}</div>
                    </h5>
                  </div>
                </div>
                <div class="col-4 text-end">
                  <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                    <i class="ni ni-building text-lg opacity-10" aria-hidden="true"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</body>